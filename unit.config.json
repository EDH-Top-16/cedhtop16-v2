{
  "listeners": {
    "*:8000": {
      "pass": "routes"
    }
  },
  "routes": [
    {
      "match": {
        "uri": [
          "/static/*",
          "/",
          "/api",
          "/about",
          "/commander*",
          "/tournament*"
        ]
      },
      "action": {
        "share": ["/app/client_v1/$uri", "/app/client_v1/index.html"]
      }
    },
    {
      "match": {
        "uri": ["/api/*"]
      },
      "action": {
        "rewrite": "/v2$uri",
        "pass": "routes"
      }
    },
    {
      "match": {
        "uri": ["/v2*"]
      },
      "action": {
        "pass": "applications/client"
      }
    }
  ],
  "applications": {
    "client": {
      "type": "external",
      "working_directory": "client",
      "executable": "/usr/bin/env",
      "arguments": [
        "node",
        "--loader",
        "unit-http/loader.mjs",
        "--require",
        "unit-http/loader",
        "server.js"
      ]
    }
  }
}
